{{#card-block cardClass="" as |card|}}
  {{#card.header}}
    {{fa-icon "user"}}Cliente: {{model.name}}
  {{/card.header}}

  {{#card.body}}
    <!-- Customer -->
    <div class="row">
      <div class="col-md-12">
          <table class="table">
            <thead>
              <th>{{fa-icon "user"}} Nome</th>
              <th>{{fa-icon "envelope"}} E-mail</th>
              <th>{{fa-icon "file"}} CPF</th>
              <th>{{fa-icon "calendar-plus-o"}} Criado em</th>
              <th>{{fa-icon "calendar-check-o"}} Atualizado em</th>
            </thead>
            <tbody>
              <tr>
                <td>{{model.name}}</td>
                <td>{{model.email}}</td>
                <td>{{model.cpfNumber}}</td>
                <td>{{model.createdAt}}</td>
                <td>{{model.updatedAt}}</td>
              </tr>
            </tbody>
          </table>
      </div>
    </div>
    <!-- Address -->
    <div class="row">
      <div class="col-md-12">
        <p class="lead">{{fa-icon "map-pin"}} Endereço</p>
        <table class="table">
          <thead>
            <th>Logradouro</th>
            <th>Número</th>
            <th>Bairro</th>
            <th>CEP</th>
            <th>Cidade</th>
            <th>Estado</th>
          </thead>
          <tbody>
          <tr>
            <td>{{model.address.street}}</td>
            <td>{{model.address.number}}</td>
            <td>{{model.address.neighborhood}}</td>
            <td>{{model.address.zipCode}}</td>
            <td>{{model.address.city}}</td>
            <td>{{model.address.state}}</td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
    <!-- Phones -->
    <div class="row">
      <div class="col-md-12">
        <p class="lead">{{fa-icon "phone"}} Telefones</p>
        <table class="table">
          <thead>
            <th>Número</th>
            <th>Tipo</th>
          </thead>
          <tbody>
          {{#each model.phones as |phone|}}
            <tr>
              <td>{{phone.number}}</td>
              <td>{{phone.type}}</td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  {{/card.body}}

  {{#card.footer}}
    {{#link-to "app.customers" class="btn btn-secondary"}}
      Cancelar
    {{/link-to}}

    {{#link-to "app.customers.edit" model class="btn btn-primary"}}
      Editar
    {{/link-to}}
  {{/card.footer}}
{{/card-block}}

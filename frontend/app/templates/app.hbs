<header class="app-header navbar">
  <button class="navbar-toggler mobile-sidebar-toggler d-lg-none mr-auto" type="button">☰</button>
  {{#link-to 'app.dashboard' class="navbar-brand"}}{{/link-to}}
  <button class="navbar-toggler sidebar-minimizer d-md-down-none" type="button">☰</button>

  <ul class="nav navbar-nav d-md-down-none"></ul>
  <ul class="nav navbar-nav ml-auto">
    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
        <img src="/assets/images/utils/avatar-placeholder.jpg" class="img-avatar" alt="{{session.currentUser.username}}">
        <span class="d-md-down-none">{{session.currentUser.username}}</span>
      </a>
      <div class="dropdown-menu dropdown-menu-right">
        <div class="dropdown-header text-center">
          <strong>Geral</strong>
        </div>

        {{#link-to "app.customers.index" class="dropdown-item"}}
          {{fa-icon 'users'}} Clientes
        {{/link-to}}

        <div class="dropdown-header text-center">
          <strong>Configurações</strong>
        </div>

        <a class="dropdown-item">
          {{fa-icon 'gear'}} Minha Conta
        </a>

        <div class="divider"></div>

        <a class="dropdown-item" {{action (route-action "logout")}}>
          {{fa-icon 'sign-out'}} Logout
        </a>
      </div>
    </li>
  </ul>

</header>

<div class="app-body">
  {{coreui-layout/sidebar}}

  <!-- Main content -->
  <main class="main">
    <!-- Breadcrumb -->
    {{#bread-crumbs tagName="ol" crumbClass="breadcrumb-item" linkable=true as |component route|}}
      {{#bread-crumb route=route breadCrumbs=component}}
        {{#if route.icon}}
          {{fa-icon route.icon}}
        {{/if}}
        {{route.title}}
      {{/bread-crumb}}
    {{/bread-crumbs}}
    <!-- Container -->
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          {{#each flashMessages.queue as |flash|}}
            {{flash-message flash=flash}}
          {{/each}}
          {{outlet}}
        </div>
      </div>
    </div>
  </main>
</div>

{{coreui-layout/footer}}

{{coreui-layout/events}}